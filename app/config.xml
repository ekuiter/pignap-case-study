<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pignap" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pignap</name>
    <description>
        Eine Narkoseanlage zur Ferkelkastration
    </description>
    <author email="info@elias-kuiter.de" href="http://elias-kuiter.de">
        Elias Kuiter
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="mailto:*" />
</widget>
